{
    "extends": "./tsconfig-base",
    "compilerOptions": {
        "outDir": "../build",
        "types": [
            "node"
        ],
        "declaration": true,
        "declarationDir": "../tsdecl"
    },
    "include": [
        "../src/**/*.ts"
    ],
    "exclude": [
        "../src/*.spec.ts",
        "../src/*.test.ts",
        "../node_modules/**/*"
    ]
}
