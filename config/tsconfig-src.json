{
    "extends": "./tsconfig-base",
    "compilerOptions": {
        "outDir": "../build",
        "types": [
            "node"
        ],
        "declaration": true,
        "declarationDir": "../build",
        "emitOnSave": false,
        "compileOnSave": false
    },
    "include": [
        "../src/**/*.ts"
    ],
    "exclude": [
        "../src/**/*.spec.ts",
        "../node_modules/**/*"
    ]
}
